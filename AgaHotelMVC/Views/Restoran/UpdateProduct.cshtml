
@model Product
@{
    ViewBag.Title = "AddProduct";
}

<div class="page">
    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-lg-5 ">



                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id" />

                    <div class="form-group ">
                        <b>Məhsulun Adı</b>
                        @Html.TextBoxFor(p => p.Name, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Name, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Kateqoriya</b>
                        @Html.DropDownListFor(p => p.CategoryId, new SelectList(ViewBag.Category, "Id", "Name"), new { @class = "form-control " })
                        @Html.ValidationMessageFor(p => p.CategoryId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Qiymət</b>
                        @Html.TextBoxFor(p => p.Price, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Price, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <b>Say</b>
                        @Html.TextBoxFor(p => p.Count, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Count, "", new { @class = "text-danger" })
                    </div>


                    @Html.ValidationSummary(true)
                    <button type="submit" class="btn btn-primary">Yenilə</button>
                </form>










            </div>
        </div>
    </div>
</div>



