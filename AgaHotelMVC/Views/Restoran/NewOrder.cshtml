@model ProductOrderPage
@{
    ViewBag.Title = "NewOrder";
}

<div class="page">
    <div class="container-fluid">

        <div class="row clearfix justify-content-center">
            <div class="col-lg-4 col-md-6">
                <div class="card flex-fill">
                    <div class="body taskboard planned_task text-center">
                        <button type="button" class="btn btn-primary btn-block" disabled>
                            <span class="btn-inner--visible">Müştəri:<span class="select-cust-name"></span></span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <div class="card flex-fill">
                    <div class="body taskboard planned_task">
                        <button data-toggle="modal" data-target="#selectcustomer" type="button" class="btn btn-primary btn-block btn-animated btn-animated-y">
                            <span class="btn-inner--visible">Müştərini seç</span>
                            <span class="btn-inner--hidden"><i class="fa fa-plus"></i></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix hidden-product">
            <div class="col-lg-6">
                <div class="card">
                    <div class="body">
                        <div class="input-group" id="adv-search">
                            <input type="text" id="searchtxt" class="form-control" placeholder="Search here..." />
                            <div class="input-group-btn">
                                <div class="btn-group ml-2" role="group">
                                    <button type="button" id="searchproduct" class="btn btn-primary"><span class="ti-search" aria-hidden="true"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card searchbody">


                    @{
                        Html.RenderPartial("~/Views/Shared/_NewOrderProductList.cshtml", model: Model);
                    }

                </div>
            </div>




                <div  class="col-lg-6 invoice">
                    <div class=" padding-0">
                        <div class="card " id="invoice">
                            <div class="col-lg-12">
                                <div class="header">
                                    <h2>Sifariş</h2>
                                </div>
                                <div class="body">
                                    <div class="table-responsive invoice-list">
                                        <table class="table table-hover mb-0 va_center">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>Adı</th>
                                                    <th>Qiymət</th>
                                                    <th>Say</th>
                                                    <th>Ümumi</th>
                                                </tr>
                                            </thead>
                                            <tbody class="order-list">

                                            
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div  class="justify-content-end">
                                    <div class="col-md-12 text-right">
                                        <p class="m-b-0"><b>Toplam:</b></p>
                                        <p class="m-b-0 "></p>
                                        <h3 class="m-b-0 m-t-10 "><span class="total-price"></span> <span>AZN</span> </h3>
                                    </div>
                                    <div class=" col-lg-12 text-right mb-2">
                                        <hr>
                                        <button class="btn btn-primary send-invoice" data-toggle="modal" data-target="#noti">Sifarişi Tamamla</button>
                                    </div>
                                </div>
                            </div>






                        </div>
                    </div>
                </div>
            </div>


    </div>

    <!-- Modal Invoice -->
    <div class="modal modal-success fade" id="noti" tabindex="-1" role="dialog" aria-labelledby="modal_5" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_title_6">Sifarişi tamamlamaq isdəyirsiz?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="py-3 text-center">
                        <h4 class="heading mt-4">Müştərinin Adı:<span class="cust-name-modal-invoice"></span></h4>
                        <p>
                            Ümümi Məbləğ : <span class="modal-totalprice"></span> AZN
                        </p>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn  btn-primary save-order" data-dismiss="modal">Tamamla</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Customer -->

    <div class="modal fade" id="selectcustomer" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6 class="title" id="defaultModalLabel">Müştəri Axtar</h6>
                </div>
                <div class="modal-body">
                    <div class="row clearfix">
                        <div class="col-12">
                            <div class="input-group input-group-transparent mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fa fa-search"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="Search">
                            </div>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Müştərinin Adi </th>
                                        <th scope="col">Nömrəsi</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        Html.RenderPartial("~/Views/Shared/_CustList.cshtml", model: Model.customer);
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">BAĞLA</button>
                </div>
            </div>
        </div>
    </div>
</div>

