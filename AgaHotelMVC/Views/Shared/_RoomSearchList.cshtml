@model List<Room>


<thead>
    <tr>
        <th>Otaq Nömrəsi</th>
        <th>Qiymet(1 gün)</th>
        <th>Böyük</th>
        <th>Uşaq</th>
        <th>Yataq Növü</th>
        <th>Ətrafli</th>
        <th>Şəkil</th>
        <th></th>
        <th></th>
    </tr>
</thead>
<tfoot>
    <tr>
        <th>Otaq Nömrəsi</th>
        <th>Qiymet(1 gün)</th>
        <th>Böyük</th>
        <th>Uşaq</th>
        <th>Yataq Növü</th>
        <th>Ətrafli</th>
        <th>Şəkil</th>
        <th></th>
        <th></th>
    </tr>
</tfoot>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Number</th>
            <th>@item.Price</th>
            <th>@item.PersonCapacity</th>
            <th>@item.ChildCapacity</th>
            <th>@item.BedType</th>
            <th>@item.Desc</th>
            <th><img style="height:20px" src="~/wwwroot/images/roomimg/@item.Photo" /></th>
            <th><a href="@Url.Action("UpdateRoom",new { Id = item.Id})" class="btn btn-primary">Dəyiş</a></th>
            <th><a href="@Url.Action("DeleteRoom",new { Id = item.Id})" class="btn btn-danger">Sil</a></th>
        </tr>
    }
</tbody>
