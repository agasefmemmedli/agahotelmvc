@model Customer

@{
    ViewBag.Title = "UpdateCustomer";
}

<div class="page">
    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-lg-5 ">
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" name="Id" id="id" value="@Model.Id" />
                        <b>Ad Soyad Ata adı</b>
                        @Html.TextBoxFor(m => m.Fullname, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Fullname, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Mobil nömrə</b>
                        @Html.TextBoxFor(m => m.PhoneNumber, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>E-poçt</b>
                        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Vəsiqənin Seriyası və Nömrəsi</b>
                        @Html.TextBoxFor(m => m.PersonIdentification, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PersonIdentification, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Yenilə</button>
                </form>
            </div>
        </div>
    </div>
</div>


