@model Customer
@{
    ViewBag.Title = "AddCustomer";
}



<div class="page">
    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-lg-5 ">
                <form method="post">
                    <div class="form-group">
                        <b>Ad Soyad Ata adı</b>
                        @Html.TextBoxFor(c=> c.Fullname, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c=> c.Fullname, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Mobil nömrə</b>
                        @Html.TextBoxFor(c=> c.PhoneNumber, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c=> c.PhoneNumber, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>E-poçt</b>
                        @Html.TextBoxFor(c=> c.Email, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c=> c.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Vəsiqənin Seriyası və Nömrəsi</b>
                        @Html.TextBoxFor(c=> c.PersonIdentification, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c=> c.PersonIdentification, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Əlavə et</button>
                </form>
            </div>
        </div>
    </div>
</div>


