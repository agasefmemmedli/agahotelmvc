@model Room
@{
    ViewBag.Title = "UpdateRoom";
}

<div class="page">
    <div class="container-fluid ">
        <div class="row justify-content-center">
            <div class="col-lg-5 ">



                <form method="post" enctype="multipart/form-data">
                    <div class="form-group ">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="Photo" value="@Model.Photo" />
                        <b>Nömrəsi</b>
                        @Html.TextBoxFor(r => r.Number, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.Number, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Qiymət(1 gün)</b>

                        @Html.TextBoxFor(r => r.Price, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Böyuk adam tutumu</b>
                        @Html.TextBoxFor(r => r.PersonCapacity, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.PersonCapacity, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Uşaq tutumu</b>
                        @Html.TextBoxFor(r => r.ChildCapacity, null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.ChildCapacity, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Yataq Növü</b>
                        <select class="form-control" name="BedType">
                            <option value="0">Single</option>
                            <option value="1">Twin</option>
                            <option value="2">Double</option>
                            <option value="3">Triple</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <b>Ətraflı</b>
                        @Html.TextAreaFor(r => r.Desc, new { @class = "form-control" })
                        @Html.ValidationMessageFor(r => r.Desc, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <b>Şəkli</b>

                        <img class="mt-2" src="~/wwwroot/images/roomimg/@Model.Photo" width="200" />
                        <div class="custom-file">
                            @Html.LabelFor(m => m.File)
                            @Html.TextBoxFor(m => m.File, null, new { @class = "custom-file-input", @type = "file", @id = "customFile" })
                            <label class="custom-file-label" for="customFile">Şəkli seçin</label>
                            @Html.ValidationMessageFor(m => m.File, null, new { @class = "text-danger" })
                        </div>
                    </div>


                    @Html.ValidationSummary(true)
                    <button type="submit" class="btn btn-primary">Yenilə</button>
                </form>










            </div>
        </div>
    </div>
</div>


