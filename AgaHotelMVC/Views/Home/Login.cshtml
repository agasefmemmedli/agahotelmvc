@model Login
@{
    Layout = null;
}
<!doctype html>
<html lang="en">


<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="ThemeMakker">
    <link rel="icon" href="favicon.ico" type="image/x-icon">
    <title>AGA HOTEL</title>
    <link rel="stylesheet" href="~/wwwroot/vendor/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="~/wwwroot/vendor/fontawesome/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/wwwroot/css/main.css">
</head>

<body class="theme-indigo">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30"><img src="~/wwwroot/images/brand/icon_black.gif" width="48" height="48" alt="ArrOw"></div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle auth-main">
                <div class="auth-box" style="color:white">
                    <div class="top">
                        <img src="~/wwwroot/images/brand/icon_black.gif" alt="Lucid">
                        <strong>AGA HOTEL</strong>
                    </div>
                    <div class="card">
                        <div class="header">
                            <p class="lead">Hesabınıza giriş edin</p>
                        </div>
                        <div class="body">
                            <form class="form-auth-small" method="post">
                                <div class="form-group">
                                    @Html.LabelFor(u => u.Email)
                                    @Html.TextBoxFor(u => u.Email, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Email, null, new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(u => u.Password)
                                    @Html.TextBoxFor(u => u.Password, null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(u => u.Password, null, new { @class = "text-danger" })
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg btn-block">LOGIN</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
    <!-- Core -->
    <script src="~/wwwroot/bundles/libscripts.bundle.js"></script>
    <script src="~/wwwroot/bundles/vendorscripts.bundle.js"></script>
    <script src="~/wwwroot/js/theme.js"></script>
</body>


</html>
